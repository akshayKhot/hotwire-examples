<div data-controller="example" class="">
  <h2 class="flex justify-center mb-9 font-bold text-3xl">
    <%= @message %>
  </h2>

  <div class="flex justify-center items-center space-x-2 mb-7">
    <% @examples.each do |example| %>
      <%= link_to example[:name], example_path(demo: example[:id]), 
          data: { "turbo-frame" => "hw-example", "example-target" => "button", "action" => "example#select" }, 
          class: 'inline-block bg-indigo-200 text-gray-700 px-3 py-1 shadow rounded-lg' %>
    <% end %>
  </div>

  <div class="flex justify-center items-center mx-auto border p-2 rounded-md h-[400px] w-[800px]">
    <turbo-frame id="hw-example"></turbo-frame>
  </div>
</div>